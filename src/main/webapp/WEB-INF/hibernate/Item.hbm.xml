<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.grocerystore.model.Item" table="item">
        <id name="itemId" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>

        <property name="name" type="string">
            <column name="name" length="50" not-null="true"/>
        </property>
        <property name="title" type="string">
            <column name="title" length="20" not-null="true"/>
        </property>
        <property name="cover" type="string">
            <column name="cover" length="200" not-null="false"/>
        </property>
        <property name="nutritionalImage" type="string">
            <column name="nutritional_image" length="200" not-null="false"/>
        </property>
        <property name="availability" type="date">
            <column name="availability" not-null="true"/>
        </property>
        <property name="nextAvailability" type="date">
            <column name="next_availability" not-null="false"/>
        </property>
        <property name="fullPrice" type="big_decimal">
            <column name="full_price" not-null="false"/>
        </property>
        <property name="discount" type="boolean">
            <column name="discount" not-null="false"/>
        </property>
        <property name="discountPercentage" type="integer">
            <column name="discount_perc" not-null="false"/>
        </property>
        <property name="discountPrice" type="big_decimal">
            <column name="discount_price" not-null="false"/>
        </property>
        <property name="discountFrom" type="date">
            <column name="discount_from" not-null="false"/>
        </property>
        <property name="discountTo" type="date">
            <column name="discount_to" not-null="false"/>
        </property>
        <property name="createdAt" type="timestamp">
            <column name="created_at" not-null="false"/>
        </property>
        <property name="updatedAt" type="timestamp">
            <column name="updated_at" not-null="false"/>
        </property>
        <property name="status" type="integer">
            <column name="status" not-null="false"/>
        </property>
        <property name="tag" type="string">
            <column name="tag" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>