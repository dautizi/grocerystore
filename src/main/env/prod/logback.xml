<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %p [%C{1}:%L] - %m%n</pattern>
    </encoder>
  </appender>
  <appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${catalinaHome}/logs/tempo-libero.back.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d %p [%C{1}:%L] - %m%n</pattern>
    </encoder>
  </appender>

    <logger name="org.springframework" level="INFO" />
    <logger name="httpclient" level="OFF" />
    <logger name="org.apache.commons" level="OFF" />
    <logger name="org.apache.http" level="OFF" />
    <logger name="org.tuckey.web.filters.urlrewrite" level="INFO" />

    <root level="INFO">
        <appender-ref ref="stdout" />
    </root>
</configuration> 